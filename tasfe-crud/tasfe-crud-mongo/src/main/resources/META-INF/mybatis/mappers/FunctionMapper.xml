<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >

<mapper namespace="function">
    <select id="_count" parameterType="map" resultType="long">
        select count(1)
        from ${_table_}
        <where>
            <if test="_where_exp_ != null">
                ${_where_exp_}
            </if>
        </where>

    </select>


    <select id="_sum" parameterType="map" resultType="java.math.BigDecimal">
        select
          sum(${_sum_exp_})
        from ${_table_}
        <where>
            <if test="_where_exp_ != null">
                ${_where_exp_}
            </if>
        </where>
    </select>


    <select id="_max" parameterType="map" resultType="long">
        select count(1)
        from ${tableName}
        <where>

            <if test="pks != null">
                <foreach item="pk" index="index" collection="pks" separator="or">
                    id=${pk}
                </foreach>
            </if>

            <if test="conditionExp != null">
                ${conditionExp}
            </if>

            <if test="conditionParam != null">
                <foreach item="column" index="index" collection="conditionParam" separator="and">
                    ${index} = #{column}
                </foreach>
            </if>
        </where>

    </select>


    <select id="_min" parameterType="map" resultType="long">
        select count(1)
        from ${tableName}
        <where>

            <if test="pks != null">
                <foreach item="pk" index="index" collection="pks" separator="or">
                    id=${pk}
                </foreach>
            </if>

            <if test="conditionExp != null">
                ${conditionExp}
            </if>

            <if test="conditionParam != null">
                <foreach item="column" index="index" collection="conditionParam" separator="and">
                    ${index} = #{column}
                </foreach>
            </if>
        </where>

    </select>



    <select id="_avg" parameterType="map" resultType="long">
        select count(1)
        from ${tableName}
        <where>

            <if test="pks != null">
                <foreach item="pk" index="index" collection="pks" separator="or">
                    id=${pk}
                </foreach>
            </if>

            <if test="conditionExp != null">
                ${conditionExp}
            </if>

            <if test="conditionParam != null">
                <foreach item="column" index="index" collection="conditionParam" separator="and">
                    ${index} = #{column}
                </foreach>
            </if>
        </where>

    </select>

</mapper>